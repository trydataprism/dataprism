{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "lint": "eslint src/**/*.ts --config ../web/eslint.config.mjs",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "hono-rate-limiter": "^0.4.2",
    "pg": "^8.14.1",
    "resend": "^6.0.2",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.2.6",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2"
  }
}
